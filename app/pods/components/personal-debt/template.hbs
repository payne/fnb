{{#if user.isIncomeDone}}

  {{#unless user.isDebtDone}}
    {{status-graphs class="status-graphs mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid"}}
    <br/>

    <div class="demo-card-wide mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">Basic Details</h2>
      </div>
      <div class="mdl-card__supporting-text">
      	Assumed living expenses (includes food, transport, entertainment, rent, etc.)
    		<form action="#">
          {{mdl-textfield label="$" value=null isLabelFloating=true pattern="[0-9]*(\.[0-9]+)?" errorMessage="Please input an amount"}}
    		</form>
      </div>
    </div>

    <div class="demo-card-wide mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">Do you owe any money?</h2>
      </div>
      <div class="mdl-card__supporting-text">
        <form action="#">
          {{mdl-radio value=hasDebt text='Yes' name='hasDebt'}}
          {{#mdl-radio name='hasDebt' value=user.hasMonthlyIncome}}
            No
          {{/mdl-radio}}
        </form>
      </div>
    </div>

    ** if yes from above **
    {{add-debt}}

    ** if no from above **

    <div class="demo-card-wide mdl-card mdl-shadow--2dp">
      <div class="mdl-card__supporting-text">
        Please see {{#mdl-button isColored=true isRaised=true action='goToInvestments'}}Investments{{/mdl-button}} or {{#mdl-button isColored=true isRaised=true action='goToGoals'}}Goals{{/mdl-button}}
      </div>
    </div>



  {{/unless}}
  {{#if user.isDebtDone}}
    {{display-debt}}
  {{/if}}
{{/if}}