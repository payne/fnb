{{#if user.isIncomeDone}}
  {{#unless user.isDebtDone}}
    <div class="mdl-grid demo-content">
      <section class="section--center mdl-grid--no-spacing mdl-grid mdl-shadow--2dp">
        <div class="mdl-card mdl-cell mdl-cell--12-col">
          <div class="mdl-card__supporting-text mdl-grid--no-spacing mdl-grid">
            <h4 class="mdl-cell--12-col">Tell Us About Your Financial Status</h4>
            <div class="section__text mdl-cell mdl-cell--10-col-desktop mdl-cell--6-col-tablet mdl-cell--3-col-phone">
              <h5>Living expenses</h5>
              <form {{action "noop" on="submit"}}>
                {{mdl-textfield
                  errorMessage="Please input an amount"
                  isLabelFloating=true
                  label="$"
                  pattern="[0-9]*(\.[0-9]+)?"
                  value=user.livingExpenses
                }}
              </form>
              <p>
                Living expenses may include food, transport, entertainment, rent, etc.
              </p>
            </div>

            <div class="section__text mdl-cell mdl-cell--10-col-desktop mdl-cell--6-col-tablet mdl-cell--3-col-phone">
              <h5>Do you owe any money?</h5>
              <form {{action "noop" on="submit"}}>
                {{mdl-radio
                  action="debtAction"
                  checked=hasDebt
                  name="hasDebt"
                  text="Yes"
                  value="hasDebt"
                }}
                {{mdl-radio
                  action="debtAction"
                  checked=noDebt
                  name="hasDebt"
                  text="No"
                  value="noDebt"
                }}
              </form>
            </div>

            <div class="section__text mdl-cell mdl-cell--10-col-desktop mdl-cell--6-col-tablet mdl-cell--3-col-phone">
              {{#if user.hasDebt}}
                {{add-debt}}
              {{else}}
                <div class="section__text mdl-cell mdl-cell--10-col-desktop mdl-cell--6-col-tablet mdl-cell--3-col-phone">
                  <h5>Awesome!  You may be interested in the items below</h5>
                  {{#link-to 'goals'}}
                    Goals
                  {{/link-to}}

                  {{#link-to 'investment'}}
                    Investments
                  {{/link-to}}
                </div>
              {{/if}}
            </div>
          </div>
        </div>
      </section>
    </div>

  {{/unless}}
  {{#if user.isDebtDone}}
    {{display-debt}}
  {{/if}}

{{/if}}