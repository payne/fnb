{{#if user.isIncomeDone}}
  {{status-graphs}}
{{else}}
  <div class="demo-card-wide mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Hi {{user.name}}</h2>
    </div>
    <div class="mdl-card__supporting-text">
      We are almost there. Before we being we need a couple of details
    </div>
  </div>

  <div class="demo-card-wide mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Do you have a monthly income?</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <form action="#">
      {{mdl-radio text='Yes' name='hasMonthlyIncome' checked=hasIncomeChecked action='hasIncomeCheckedAction'}}
      {{#mdl-radio name='hasMonthlyIncome' checked=hasIncomeNotChecked action='hasIncomeNotCheckedAction'}}
        No
      {{/mdl-radio}}
      </form>
    </div>
  </div>

  {{#if user.hasMonthlyIncome}}
    ** there is a note about conditional for life stages **
    <div class="demo-card-wide mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">How much can you spend a month?</h2>
      </div>
      <div class="mdl-card__supporting-text">
        <form action="#">
          {{mdl-textfield label="$" value=null isLabelFloating=true pattern="[0-9]*(\.[0-9]+)?" errorMessage="Please input a number"}}
        </form>
        Info box: Monthly income may include the following: salary, side jobs
      </div>
    </div>
  {{else}}
    <div class="demo-card-wide mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">How much are you willing to spend in a month?</h2>
      </div>
      <div class="mdl-card__supporting-text">
        <form action="#">
          {{mdl-textfield label="$" value=null isLabelFloating=true pattern="[0-9]*(\.[0-9]+)?" errorMessage="Please input an amount"}}
        </form>
      </div>
    </div>
  {{/if}}

  <br/>
  {{#mdl-button isColored=true isRaised=true action='incomeDoneAction'}}Let's Get Started{{/mdl-button}}
{{/if}}
